<Window
    x:Class="Bingou.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Bingou"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:emitircartelas="clr-namespace:Bingou.Components.EmitirCartelas"
    xmlns:validarcartelas="clr-namespace:Bingou.Components.ValidarCartelas"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <TabControl>
            <TabItem Header="Emitir cartelas">
                <emitircartelas:EmitirCartelasView/>
            </TabItem>
            <TabItem Header="Validar cartelas">
                <validarcartelas:ValidarCartelasView/>
            </TabItem>
            <TabItem Header="Sorteio do bingo">
                <Grid Background="#FF05E5E5" />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
